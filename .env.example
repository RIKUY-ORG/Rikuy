RIKUY_CHAIN_SEMAPHORE_ADDRESS=
RIKUY_CHAIN_SEMAPHORE_GROUP_ID=
RIKUY_CHAIN_MOCK_USX_ADDRESS=

# ═══════════════════════════════════════════════════════════════
# IPFS (Pinata)
# Get keys at: https://app.pinata.cloud/
# ═══════════════════════════════════════════════════════════════
PINATA_JWT=your_pinata_jwt_token
PINATA_GATEWAY=https://gateway.pinata.cloud

# ═══════════════════════════════════════════════════════════════
# ARKIV (Permanent Storage)
# ═══════════════════════════════════════════════════════════════
ARKIV_RPC_URL=https://mendoza.hoodi.arkiv.network/rpc
ARKIV_PRIVATE_KEY=0x_your_arkiv_wallet_private_key

# ═══════════════════════════════════════════════════════════════
# AI PROVIDERS
# Phase 4: Add Claude for AI Consensus
# ═══════════════════════════════════════════════════════════════
GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key
CLAUDE_API_KEY=your_claude_api_key

# ═══════════════════════════════════════════════════════════════
# SECURITY
# ═══════════════════════════════════════════════════════════════
JWT_SECRET=your_jwt_secret_here
MAX_FILE_SIZE=10485760
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=5

# ═══════════════════════════════════════════════════════════════
# REDIS (Optional - for caching)
# ═══════════════════════════════════════════════════════════════
REDIS_URL=redis://localhost:6379

# ═══════════════════════════════════════════════════════════════
# BLOCK EXPLORER API KEYS (For contract verification)
# ═══════════════════════════════════════════════════════════════
SCROLLSCAN_API_KEY=your_scrollscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
RIKUY_EXPLORER_API_KEY=
RIKUY_EXPLORER_API_URL=
